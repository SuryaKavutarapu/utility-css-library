{
  "name": "@organization/design-system",
  "version": "1.0.0",
  "description": "A configurable design system for organizations with CSS utilities, design tokens, and Ant Design components using SCSS",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "style": "dist/styles/main.css",
  "sass": "src/styles/main.scss",
  "files": [
    "dist/",
    "src/styles/",
    "src/tokens/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "dev": "webpack serve --mode=development",
    "watch": "webpack --mode=development --watch",
    "lint": "npm run lint:js && npm run lint:styles",
    "lint:js": "eslint src/**/*.{js,ts} --fix",
    "lint:styles": "stylelint src/**/*.{css,scss} --fix",
    "format": "prettier --write src/**/*.{js,ts,json,scss,css,html}",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepublishOnly": "npm run clean && npm run build && npm run test",
    "tokens:generate": "node scripts/generate-tokens.js",
    "docs": "typedoc src/tokens --out docs/api"
  },
  "keywords": [
    "design-system",
    "css",
    "scss",
    "utilities",
    "tailwind",
    "ant-design",
    "design-tokens",
    "typescript",
    "enterprise",
    "organization",
    "configurable",
    "framework"
  ],
  "author": "Your Organization",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/design-system.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/design-system/issues"
  },
  "homepage": "https://github.com/your-org/design-system#readme",
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.3",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "autoprefixer": "^10.4.15",
    "css-loader": "^6.8.1",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss": "^8.4.29",
    "postcss-loader": "^7.3.3",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "sass": "^1.67.0",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "stylelint": "^15.10.3",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard-scss": "^11.0.0",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "typedoc": "^0.25.1",
    "typescript": "^5.2.2",
    "url-loader": "^4.1.1",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {},
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
